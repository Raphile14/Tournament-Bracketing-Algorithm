<html>
    <head>
        <%- include('../partials/head'); %>
        <title><%= name %> Bracketing</title>
    </head>

    <div class="text-center">
        <br>
        <h2><%= name %></h2>
        <h3><%= game %></h3>
        <h4><%= type %></h4>

        <hr class="my-4">

        <div class="container">
            <div id="games" class="row">
                <% for (let i = 0; i < bracket.length; i++) { %>
                    <div class="inline-container"> 
                        <p>Round: <%= i + 1 %></p>           
                        <div class="row">
                            <%- include('../partials/game', {bracket: bracket[i]}) %>
                        </div>            
                    </div>
                <% }; %>
            </div>                            
        </div>        
    </div>
</html>
